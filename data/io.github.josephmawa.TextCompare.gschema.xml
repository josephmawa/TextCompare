<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="textcompare">
  <schema id="io.github.josephmawa.TextCompare" path="/io/github/josephmawa/TextCompare/">
    <key name="window-width" type="i">
      <default>800</default>
    </key>
    <key name="window-height" type="i">
      <default>600</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="preferred-theme" type="s">
      <choices>
        <choice value="system" />
        <choice value="dark" />
        <choice value="light" />
      </choices>
      <default>"system"</default>
    </key>
    <key name="comparison-token" type="s">
      <choices>
        <choice value="characters" />
        <choice value="words" />
        <choice value="lines" />
        <choice value="sentences" />
      </choices>
      <default>"words"</default>
    </key>
    <key name="show-old-text" type="b">
      <default>true</default>
    </key>
    <key name="show-new-text" type="b">
      <default>true</default>
    </key>
    <key name="show-comparison" type="b">
      <default>true</default>
    </key>
    <key name="case-sensitivity" type="b">
      <default>true</default>
    </key>
    <key name="real-time-comparison" type="b">
      <default>false</default>
    </key>
  </schema>
</schemalist>